{
  "codeLens.enable": true,
  "languageserver": {
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "ruby",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "java",
    "html",
    "css",
    "scss",
    "xml",
    "markdown"
  ],
  "solargraph.formatting": true,
  "solargraph.diagnostics": true
}
